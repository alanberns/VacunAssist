extends layoutSinlog

block content 


	<div class="container-fluid">

		<div class="row"><div class="col-3"></div>
			<div class="col-6">
				<h1>Recuperar clave</h1>
				<br><br><br>
				<h6>Ingresa tu email para que podamos enviarte una clave, la cual tenes que usar para iniciar tu sesion</h6>
			</div>

		</div>

		<div class="row">
			<div class="col-3"></div>
			<div class="col-6">

				<form method="post" action="./recuperarClave">
					<div class="col-12 col-md-3"><label>E-Mail:</label></div>
					<div class="col-12 col-md-7"><input name="email" type="email" class="form-control" required="required"/></div>
					<br>
					<div class="col-7">
					<input type="submit" class="btn btn-warning" value="Enviar" class="form-control"/></div>
				</form>
				<br>
				<form method="get" action="./">
					<div class="col-7"><input type="submit" class="btn btn-warning" value="Ir al inicio" class="form-control"/></div>
				</form>
				<br><br>
				<span name="resultado"> #{resultado}</span>
			</div>
		</div>
	</div>